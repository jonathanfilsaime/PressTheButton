<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jonathanfils_aime.test.MainActivity">

    <TextView
        android:id="@+id/profile1"
        android:background="@drawable/dadpicture"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:onClick="startProfile1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Jennifer"
        android:id="@+id/profile4name"
        android:elevation="5dp"
        android:layout_above="@+id/progressBar"
        android:layout_alignStart="@+id/progressBar"
        android:layout_alignEnd="@+id/profile2"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/profile2"
        android:background="@drawable/mompicture"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_marginLeft="70dp"
        android:onClick="startProfile2"/>

    <TextView
        android:id="@+id/profile3"
        android:background="@drawable/child1picture"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_marginLeft="140dp"
        android:onClick="startProfile3"/>

    <TextView
        android:id="@+id/profile4"
        android:background="@drawable/childpicture"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_marginLeft="210dp"
        android:elevation="5dp"
        android:shadowColor="@color/colorPrimary"
        android:onClick="startProfile4"/>

    <TextView
        android:id="@+id/shadow1"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_marginLeft="210dp"
        android:elevation="4dp"
        android:shadowRadius="5"
        android:padding="5dp"
        android:background="@drawable/shadow" />

    <TextView
        android:layout_marginTop="70dp"
        android:layout_width="345dp"
        android:layout_height="130dp"
        android:background="@drawable/whiterec"
        android:padding="1dp"
        android:elevation="3dp"
        android:id="@+id/whiteBox"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanNewButton"
        android:layout_alignParentStart="true"
        android:id="@+id/scanWizardStatus"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/custom_progress_bar"
        android:indeterminate="false"
        android:max="100"
        android:elevation="3dp"
        android:progress="20"
        android:layout_width="match_parent"
        android:layout_marginBottom="34dp"
        android:layout_alignBottom="@+id/whiteBox"
        android:layout_alignStart="@+id/progress"
        android:layout_alignEnd="@+id/goal"
        android:minHeight="30dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/single_click_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/first_button"
        android:text="Button" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/double_click_button"
        android:background="@drawable/first_button"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/single_click_button"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/scanWizardStatus" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/second_spinner"
        android:layout_alignTop="@+id/double_click_button"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/press_and_hold_button"
        android:background="@drawable/first_button"
        android:layout_below="@+id/double_click_button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/third_spinner"
        android:layout_alignTop="@+id/press_and_hold_button"
        android:layout_toEndOf="@+id/scanWizardStatus" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_spinner"
        android:layout_alignTop="@+id/single_click_button"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        android:layout_alignBottom="@+id/whiteBox"
        android:layout_toEndOf="@+id/scanWizardStatus"
        android:layout_marginStart="12dp"
        android:elevation="3dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:text="$1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goal"
        android:layout_alignBottom="@+id/whiteBox"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:elevation="3dp"
        android:textStyle="bold"
        android:textColor="#000000"/>
</RelativeLayout>
