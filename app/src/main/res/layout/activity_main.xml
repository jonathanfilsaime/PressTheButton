<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jonathanfils_aime.test.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/rectangle"
        android:padding="1dp"
        style="@style/myImageView"
        android:id="@+id/whiteBox"

        />

    <TextView
        android:text="20000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanNewButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-300dp"
        android:id="@+id/progress"
        />


    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanNewButton"
        android:layout_alignParentStart="true"
        android:id="@+id/scanWizardStatus"/>



    <TextView
        android:text="$1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanNewButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-300dp"
        android:layout_marginLeft="280dp"
        android:id="@+id/goal"/>

    <Button
        android:text="Scan new button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scanNewButton"
        android:onClick="scanNewButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_spinner"
        android:layout_above="@+id/second_spinner"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp" />

    <Spinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/second_spinner"
        android:layout_below="@+id/press_and_hold_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/double_click_button"
        android:background="@drawable/first_button"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/second_spinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/third_spinner"
        android:layout_below="@+id/double_click_button"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true" />
        android:id="@+id/spinner"
        android:layout_marginTop="114dp"
        android:layout_below="@+id/goal"
        android:layout_toEndOf="@+id/progress" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="false"
        android:max="100"
        android:progress="20"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_above="@+id/spinner"/>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/press_and_hold_button"
        android:background="@drawable/first_button"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/progressBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
